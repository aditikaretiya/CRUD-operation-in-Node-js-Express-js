<html>
    <body>
        <%- include('menu-user');%>
        <form method="post" action="/user-updateprocess/<%= mydata[0].user_id %>">
            Name : <input type="text" name="txt1" value="<%= mydata[0].user_name %>" required /><br>
            Gender : <select name="txt2">
                <option>Male</option>
                <option>Female</option>
            </select><br>
            Email : <input type="text" name="txt3" value="<%= mydata[0].user_email %>" required /><br>
            Password : <input type="text" name="txt4" value="<%= mydata[0].user_password %>" required /><br>
            
            Mobile : <input type="text" name="txt5" value="<%= mydata[0].user_mobile %>" required /><br>
            <input type="submit"/>
        </form>
    </body>
</html>